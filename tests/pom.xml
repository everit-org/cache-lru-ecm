          <execution>
            <id>integration-test</id>
            <phase>integration-test</phase>
            <goals>
              <goal>integration-test</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <jacoco>
            <includes>org.everit.authentication.http.session.*</includes>
            <excludes>org.everit.authentication.http.session.tests.*</excludes>
